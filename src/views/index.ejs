<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="css/style.css" />
    <title>Learning NodeJS</title>
  </head>
  <body>
    <h1>Test Nodes</h1>
    <!-- <%= dataUser%> -->
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link active" aria-current="page" href="/">Home</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/upload">Upload Files</a>
      </li>
    </ul>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Name</th>
          <th scope="col">Birth</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < dataUser.length; i++) { %>
        <tr>
          <td><%= dataUser[i].id %></td>
          <td><%= dataUser[i].name_User %></td>
          <td><%= dataUser[i].birth %></td>
          <td>
            <a
              href="/detail-user/<%= dataUser[i].id  %>"
              class="btn btn-primary"
              >Detail</a
            >
            <a href="/edit-user/<%= dataUser[i].id  %>" class="btn btn-primary"
              >Edit</a
            >

            <form action="/delete-user" method="post">
              <input
                type="text"
                hidden
                value="<%= dataUser[i].id  %>"
                name="userId"
              />
              <button type="submit" class="btn btn-primary">Delete</button>
            </form>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>

    <div class="createUser">
      <form action="/create-user" method="post">
        Create new user
        <div>
          <label>id</label>
          <br />
          <input type="text" name="id" />
        </div>
        <div>
          <label>name</label>
          <br />
          <input type="text" name="name" />
        </div>
        <div>
          <label>birth</label>
          <br />
          <input type="datetime-local" name="birth" />
        </div>
        <div>
          <label>role</label>
          <br />
          <input type="text" name="role" />
        </div>
        <div>
          <label>sex</label>
          <br />
          <input type="text" name="sex" />
        </div>
        <button type="submit" class="btn_submit">Submit</button>
      </form>
    </div>
  </body>
</html>
